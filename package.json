{
  "name": "ancientlingo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "mobile",
    "web"
  ],
  "scripts": {
    "test": "npm-run-all --parallel test:web test:mobile",
    "test:web": "npm --workspace web run test",
    "test:mobile": "npm --workspace mobile run test",
    "lint": "npm-run-all --parallel lint:web lint:mobile",
    "lint:web": "npm --workspace web run lint",
    "lint:mobile": "eslint 'mobile/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}